# LinkedInProspector - Configuration par défaut
# Remplacer les valeurs par défaut par les valeurs réelles en production

# Application
APP_NAME=LinkedInProspector
NODE_ENV=development
PORT=3000
API_PREFIX=/api
API_VERSION=v1
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200
JWT_SECRET=change_this_secret_in_production
JWT_EXPIRATION=86400

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=linkedin_prospector
DB_SCHEMA=public
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis pour BullMQ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Stockage S3
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=linkedin-prospector

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# API LinkedIn (confidentielle)
LINKEDIN_API_BASE_URL=
LINKEDIN_API_VERSION=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Limites et quotas
DEFAULT_MESSAGE_QUOTA=100
DEFAULT_COMMENT_QUOTA=50
MAX_RETRY_COUNT=3
RETRY_DELAY_MS=300000

# Monitoring et logs
LOG_LEVEL=debug
SENTRY_DSN=

# Cron jobs (format cron)
QUOTA_RESET_CRON="0 0 * * *"           # Minuit tous les jours
CHECK_REPLIES_CRON="*/15 * * * *"      # Toutes les 15 minutes
PROCESS_SCHEDULED_CRON="*/5 * * * *"   # Toutes les 5 minutes
CLEANUP_OLD_LOGS_CRON="0 2 * * *"      # 2h du matin tous les jours